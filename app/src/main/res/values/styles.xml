<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/branco</item>
        <item name="colorPrimaryDark">@color/branco</item>
        <item name="colorAccent">@color/vermelho</item>
    </style>


    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    
    <style name="FonteDINPro_regular" parent="android:Widget.TextView">
        <item name="android:fontFamily">font/dinpro_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cinza</item>
    </style>

    <style name="FonteDINPro_regular28" parent="android:Widget.TextView">
        <item name="android:fontFamily">font/dinpro_regular</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/cinza</item>
    </style>

    <style name="FonteDINPro_regular_14" parent="android:Widget.TextView">
        <item name="android:fontFamily">font/dinpro_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cinza</item>
    </style>

    <style name="FonteDINPro_regularCinzaClaro_14" parent="android:Widget.TextView">
        <item name="android:fontFamily">font/dinpro_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cinzaClaro</item>
    </style>


    <style name="ButtonConfig" parent="android:Widget.Button">
        <item name="android:textColor">@color/branco</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FonteDINPro_light_regularCinzaClaro_16" parent="android:Widget.TextView">
        <item name="android:fontFamily">font/dinpro_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cinzaClaro</item>
    </style>

</resources>
